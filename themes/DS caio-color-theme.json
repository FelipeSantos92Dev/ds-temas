{
  "name": "Santos FC Theme",
  "author": "Felipe Santos",
  "maintainers": ["Felipe Santos <dev.felipesantos@gmail.com>"],
  "type": "light",

  // Cores principais baseadas no uniforme do Santos
  "colors": {
    // UI Base
    "foreground": "#333333",
    "descriptionForeground": "#555555",
    "disabledForeground": "#888888",
    "focusBorder": "#000000",
    "errorForeground": "#CC0000",
    "widget.shadow": "#00000022",
    "scrollbar.shadow": "#00000033",
    "badge.background": "#000000",
    "badge.foreground": "#FFFFFF",
    "icon.foreground": "#333333",
    "settings.headerForeground": "#000000",
    "window.activeBorder": "#FFFFFF",
    "window.inactiveBorder": "#CCCCCC",
    "sash.hoverBorder": "#000000",

    // Toolbar e extensões
    "toolbar.activeBackground": "#EEEEEE",
    "toolbar.hoverBackground": "#DDDDDD",
    "extensionButton.prominentBackground": "#000000DD",
    "extensionButton.prominentHoverBackground": "#333333",
    "extensionButton.prominentForeground": "#FFFFFF",
    "extensionBadge.remoteBackground": "#000000",
    "extensionBadge.remoteForeground": "#FFFFFF",

    // Botões e barras de progresso
    "button.background": "#000000",
    "button.hoverBackground": "#333333",
    "button.secondaryBackground": "#E0E0E0",
    "button.foreground": "#FFFFFF",
    "progressBar.background": "#000000",

    // Inputs e dropdowns
    "input.background": "#FFFFFF",
    "input.foreground": "#000000",
    "input.border": "#CCCCCC",
    "input.placeholderForeground": "#888888",
    "inputOption.activeForeground": "#000000",
    "inputOption.activeBackground": "#DDDDDD",
    "dropdown.foreground": "#000000",
    "dropdown.background": "#FFFFFF",
    "dropdown.listBackground": "#FFFFFF",

    // Activity Bar (barra lateral)
    "activityBar.background": "#000000",
    "activityBar.foreground": "#FFFFFF",
    "activityBar.inactiveForeground": "#AAAAAA",
    "activityBar.border": "#000000",
    "activityBarBadge.background": "#FFFFFF",
    "activityBarBadge.foreground": "#000000",

    // Side Bar (navegador de arquivos)
    "sideBar.background": "#F0F0F0",
    "sideBar.foreground": "#333333",
    "sideBar.border": "#CCCCCC",
    "sideBarTitle.foreground": "#000000",
    "sideBarSectionHeader.background": "#E6E6E6",
    "sideBarSectionHeader.foreground": "#000000",
    "sideBarSectionHeader.border": "#CCCCCC",
    "sideBar.dropBackground": "#E0E0E0",

    // Listas
    "list.activeSelectionBackground": "#E0E0E0",
    "list.activeSelectionForeground": "#000000",
    "list.inactiveSelectionBackground": "#F0F0F0",
    "list.inactiveSelectionForeground": "#000000",
    "list.focusBackground": "#DDDDDD",
    "list.focusForeground": "#000000",
    "list.hoverBackground": "#EEEEEE",
    "list.hoverForeground": "#000000",
    "list.highlightForeground": "#000000",
    "list.errorForeground": "#CC0000",
    "list.warningForeground": "#997700",

    // Editor principal
    "editor.background": "#FFFFFF",
    "editor.foreground": "#000000",
    "editorLineNumber.foreground": "#AAAAAA",
    "editorLineNumber.activeForeground": "#000000",
    "editorCursor.foreground": "#000000",
    "editor.selectionBackground": "#E0E0E0",
    "editor.selectionForeground": "#000000",
    "editor.inactiveSelectionBackground": "#E6E6E6",
    "editor.selectionHighlightBackground": "#EEEEEE",
    "editor.findMatchBackground": "#FFFF0066",
    "editor.findMatchHighlightBackground": "#FFFF0033",
    "editor.lineHighlightBackground": "#F5F5F5",
    "editor.lineHighlightBorder": "#E0E0E0",
    "editorLink.activeForeground": "#000000",
    "editorWhitespace.foreground": "#DDDDDD",
    "editorBracketMatch.background": "#E0E0E0",
    "editorBracketMatch.border": "#999999",

    // Gutter e indentação
    "editorGutter.background": "#FFFFFF",
    "editorGutter.modifiedBackground": "#0099FF",
    "editorGutter.addedBackground": "#009900",
    "editorGutter.deletedBackground": "#CC0000",
    "editorIndentGuide.background1": "#DDDDDD",
    "editorIndentGuide.activeBackground1": "#BBBBBB",

    // Tabs
    "tab.activeBackground": "#FFFFFF",
    "tab.inactiveBackground": "#EEEEEE",
    "tab.activeForeground": "#000000",
    "tab.inactiveForeground": "#666666",
    "tab.border": "#CCCCCC",
    "tab.activeBorder": "#000000",

    // Terminal
    "terminal.background": "#FFFFFF",
    "terminal.foreground": "#000000",
    "terminal.ansiBlack": "#000000",
    "terminal.ansiRed": "#CC0000",
    "terminal.ansiGreen": "#009900",
    "terminal.ansiYellow": "#CCCC00",
    "terminal.ansiBlue": "#0000CC",
    "terminal.ansiMagenta": "#CC00CC",
    "terminal.ansiCyan": "#00CCCC",
    "terminal.ansiWhite": "#CCCCCC",
    "terminal.ansiBrightBlack": "#666666",
    "terminal.ansiBrightRed": "#FF0000",
    "terminal.ansiBrightGreen": "#00FF00",
    "terminal.ansiBrightYellow": "#FFFF00",
    "terminal.ansiBrightBlue": "#0000FF",
    "terminal.ansiBrightMagenta": "#FF00FF",
    "terminal.ansiBrightCyan": "#00FFFF",
    "terminal.ansiBrightWhite": "#FFFFFF",

    // Status Bar
    "statusBar.background": "#000000",
    "statusBar.foreground": "#FFFFFF",
    "statusBar.border": "#000000",
    "statusBar.debuggingBackground": "#FF6600",
    "statusBar.debuggingForeground": "#FFFFFF",
    "statusBar.noFolderBackground": "#333333",
    "statusBar.noFolderForeground": "#FFFFFF",
    "statusBarItem.hoverBackground": "#333333",
    "statusBarItem.remoteBackground": "#000000",
    "statusBarItem.remoteForeground": "#FFFFFF",

    // Título e menubar
    "titleBar.activeBackground": "#000000",
    "titleBar.activeForeground": "#FFFFFF",
    "titleBar.inactiveBackground": "#333333",
    "titleBar.inactiveForeground": "#CCCCCC",
    "menubar.selectionBackground": "#EEEEEE",
    "menubar.selectionForeground": "#000000",
    "menu.background": "#FFFFFF",
    "menu.foreground": "#000000",
    "menu.selectionBackground": "#EEEEEE",
    "menu.selectionForeground": "#000000",
    "menu.separatorBackground": "#CCCCCC",

    // Git decorations
    "gitDecoration.modifiedResourceForeground": "#0066CC",
    "gitDecoration.deletedResourceForeground": "#CC0000",
    "gitDecoration.untrackedResourceForeground": "#009900",
    "gitDecoration.ignoredResourceForeground": "#888888",
    "gitDecoration.conflictingResourceForeground": "#CC6600"
  },

  // Definições de tokens para syntax highlighting
  "tokenColors": [
    {
      "name": "Comments",
      "scope": ["comment", "punctuation.definition.comment"],
      "settings": {
        "fontStyle": "italic",
        "foreground": "#888888"
      }
    },
    {
      "name": "Keywords",
      "scope": [
        "keyword",
        "keyword.control",
        "storage.type",
        "storage.modifier"
      ],
      "settings": {
        "foreground": "#000000",
        "fontStyle": "bold"
      }
    },
    {
      "name": "Strings",
      "scope": [
        "string",
        "string.quoted.single",
        "string.quoted.double",
        "string.template"
      ],
      "settings": {
        "foreground": "#008800"
      }
    },
    {
      "name": "Numbers & Constants",
      "scope": [
        "constant.numeric",
        "constant.language",
        "constant.character",
        "constant.other"
      ],
      "settings": {
        "foreground": "#0033CC"
      }
    },
    {
      "name": "Functions & Methods",
      "scope": [
        "entity.name.function",
        "meta.function-call",
        "variable.function",
        "support.function"
      ],
      "settings": {
        "foreground": "#000000"
      }
    },
    {
      "name": "Classes & Types",
      "scope": [
        "entity.name.type",
        "entity.name.class",
        "entity.name.namespace",
        "entity.other.inherited-class",
        "support.class",
        "support.type"
      ],
      "settings": {
        "foreground": "#000099",
        "fontStyle": "bold"
      }
    },
    {
      "name": "Variables",
      "scope": [
        "variable",
        "variable.other.readwrite",
        "variable.parameter",
        "variable.language"
      ],
      "settings": {
        "foreground": "#333333"
      }
    },
    {
      "name": "Object Properties",
      "scope": [
        "variable.other.property",
        "variable.other.object.property",
        "meta.object-literal.key"
      ],
      "settings": {
        "foreground": "#444444"
      }
    },
    {
      "name": "Tags (HTML, XML, JSX)",
      "scope": ["entity.name.tag", "punctuation.definition.tag"],
      "settings": {
        "foreground": "#000000",
        "fontStyle": "bold"
      }
    },
    {
      "name": "Attributes",
      "scope": ["entity.other.attribute-name"],
      "settings": {
        "foreground": "#333333",
        "fontStyle": "italic"
      }
    },
    {
      "name": "Operators",
      "scope": ["keyword.operator"],
      "settings": {
        "foreground": "#000000"
      }
    },
    {
      "name": "Punctuation",
      "scope": ["punctuation", "meta.brace"],
      "settings": {
        "foreground": "#555555"
      }
    }
  ],

  "semanticHighlighting": true,

  // Configurações semânticas de tokens para linguagens modernas
  "semanticTokenColors": {
    "enumMember": "#005599",
    "property": "#333333",
    "function": "#000000",
    "method": "#000000",
    "class": "#000099",
    "namespace": "#000077",
    "interface": "#000099",
    "type": "#000099",
    "parameter": "#333333",
    "variable": "#333333",
    "decorator": "#666666"
  }
}
